<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tiendat.demo.Controller.ControllerXe.ThongKeXeController">
   <children>
      <HBox spacing="10.0">
         <children>
            <Label prefWidth="70.0" text="Từ Ngày" />
            <JFXDatePicker fx:id="id_TuNgay" prefWidth="200.0" />
            <Label prefWidth="70.0" text="Đến Ngày" />
            <JFXDatePicker fx:id="id_DenNgay" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label prefWidth="70.0" text="Loại" />
            <JFXComboBox fx:id="id_CbLoaiThongKe" prefWidth="200.0" />
            <JFXButton onAction="#ThongKe" text="Thống Kê" />
         </children>
      </HBox>
      <Label text="Bảng Thống Kê" />
      <Pagination fx:id="id_PaginationThongKe" maxPageIndicatorCount="1" prefHeight="500.0" />
      <Label fx:id="id_TongKet" text="Tổng Kết" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
